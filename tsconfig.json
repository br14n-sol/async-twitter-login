{
	"compilerOptions": {
		"lib": ["ES2023"],
		"target": "ES2022",
		"module": "Node16",
		"moduleResolution": "Node16",

		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,

		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src", "tests"],
	"exclude": ["node_modules"]
}
